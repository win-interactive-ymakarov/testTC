<?xml version="1.0" encoding="UTF-8"?>
<project name="testfb" default="all">
  
  
  <property file="testfb.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  
  <!-- Global Libraries -->
  
  <!-- Modules -->
  
  
  <!-- Module testTC -->
  
  <dirname property="module.testtc.basedir" file="${ant.file}"/>
  
  
  
  <property name="compiler.args.testtc" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="testtc.output.dir" value="${module.testtc.basedir}/out/production/testTC"/>
  <property name="testtc.testoutput.dir" value="${module.testtc.basedir}/out/test/testTC"/>
  
  <path id="testtc.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="testtc.module.production.classpath"/>
  
  <path id="testtc.runtime.production.module.classpath">
    <pathelement location="${testtc.output.dir}"/>
  </path>
  
  <path id="testtc.module.classpath">
    <pathelement location="${testtc.output.dir}"/>
  </path>
  
  <path id="testtc.runtime.module.classpath">
    <pathelement location="${testtc.testoutput.dir}"/>
    <pathelement location="${testtc.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.testtc">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.testtc">
    <patternset refid="excluded.from.module.testtc"/>
  </patternset>
  
  <path id="testtc.module.sourcepath">
    <dirset dir="${path.variable.documents}/testTC">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.testtc" depends="compile.module.testtc.production,compile.module.testtc.tests" description="Compile module testTC"/>
  
  <target name="compile.module.testtc.production" description="Compile module testTC; production classes">
    <mkdir dir="${testtc.output.dir}"/>
    <javac destdir="${testtc.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.testtc}"/>
      <bootclasspath refid="testtc.module.bootclasspath"/>
      <classpath refid="testtc.module.production.classpath"/>
      <src refid="testtc.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.testtc"/>
    </javac>
    
    <copy todir="${testtc.output.dir}">
      <fileset dir="${path.variable.documents}/testTC/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.testtc.tests" depends="compile.module.testtc.production" description="compile module testTC; test classes" unless="skip.tests"/>
  
  <target name="clean.module.testtc" description="cleanup module">
    <delete dir="${testtc.output.dir}"/>
    <delete dir="${testtc.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.testtc" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.testtc" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>